.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.time-display {
  font-size: 32rpx;
  color: #333;
  margin: 20rpx 0 1rpx 0;
  text-align: center;
}

.progress-bar {
  width: 80%;
  margin: 1rpx 0 20rpx 0;
}

.button-container {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 20rpx 0;
}

.left-column, .right-column {
  display: flex;
  flex-direction: column;
  width: 48%;
  align-items: center;
}

.left-column .reset-btn {
  margin-top: auto;
  margin-bottom: 10rpx;
  width: 100%;
}

.right-column .play-btn {
  margin-bottom: 10rpx;
}

.switch-container {
  margin-top: 1rpx;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.input-box, .stop-btn, .pause-btn, .open-btn, .play-btn, .reset-btn {
  width: 100%;
  height: 80rpx;
  margin: 10rpx 0;
  padding: 1rpx;
  font-size: 32rpx;
  text-align: center;
  box-sizing: border-box;
}

.input-box {
  border: 2rpx solid #ccc;
}

.note-input {
  margin-top: 1rpx;
  height: 600rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
  border: 1rpx solid #ccc;
  text-align: left;
  vertical-align: top;
}

.stop-btn {
  background-color: rgb(34, 21, 21);
  color: #fff;
}

.pause-btn {
  background-color: #ff9500;
  color: #fff;
}

.open-btn {
  background-color: #ff9500;
  color: #fff;
}

.play-btn {
  background-color: #007aff;
  color: #fff;
}

.reset-btn {
  background-color: #007aff;
  color: #fff;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}