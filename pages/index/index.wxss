.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.time-display {
  font-size: 32rpx;
  color: #333;
  margin: 20rpx 0;
  text-align: center;
}

.progress-bar {
  width: 80%;
  margin: 20rpx 0;
}

.button-container {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 20rpx 0;
}

.left-column, .right-column {
  display: flex;
  flex-direction: column;
  width: 48%;
  align-items: center;
}

.input-box, .stop-btn, .pause-btn, .open-btn, .play-btn, .reset-btn {
  width: 100%;
  height: 80rpx; /* 统一高度 */
  margin: 10rpx 0;
  padding: 10rpx;
  font-size: 32rpx;
  text-align: center;
  box-sizing: border-box;
}

.input-box {
  border: 1rpx solid #ccc;
}

.stop-btn {
  background-color: #ccc;
  color: #fff;
}

.pause-btn {
  background-color: #ff9500;
  color: #fff;
}

.open-btn {
  background-color: #ff9500;
  color: #fff;
}

.play-btn {
  background-color: #007aff;
  color: #fff;
}

.reset-btn {
  background-color: #007aff;
  color: #fff;
}

.switch-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx; /* 与其他元素高度一致 */
  margin: 10rpx 0;
  font-size: 32rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}